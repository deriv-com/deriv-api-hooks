{
    "name": "@deriv-com/api-hooks",
    "private": false,
    "version": "0.0.1",
    "type": "module",
    "description": "A React hooks library utilising Tanstack Query which encapsulates Deriv API WebSocket functionality.",
    "main": "index.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "extract": "tsc ./scripts/codemod.ts --esModuleInterop --outDir ./codemod && mv ./codemod/codemod.js ./codemod/codemod.cjs && node ./codemod/codemod.cjs && prettier ./src/api --write"
    },
    "keywords": [
        "deriv",
        "utils"
    ],
    "author": "deriv",
    "homepage": "https://deriv.com",
    "license": "ISC",
    "dependencies": {
        "@deriv-com/utils": "^0.0.10",
        "@deriv/deriv-api": "^1.0.15",
        "@tanstack/react-query": "^5.25.0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@deriv/api-types": "^1.0.166",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.63",
        "@types/react-dom": "^18.2.20",
        "@vitejs/plugin-react": "^4.2.1",
        "prettier": "3.2.5",
        "rxjs": "^7.8.1",
        "typescript": "^5.3.3",
        "vite": "^5.1.5",
        "vite-plugin-dts": "^3.7.3",
        "vite-plugin-mkcert": "^1.17.4",
        "vite-tsconfig-paths": "^4.3.1"
    }
}
